                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="@dimen/personinfoleftSize"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
                
